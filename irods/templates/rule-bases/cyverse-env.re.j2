# the name of the AMQP exchange where iRODS should publish messages
cyverse_AMQP_EXCHANGE: string
cyverse_AMQP_EXCHANGE = '{{ _amqp_exchange }}'

# the name of the resource to use for replication by default
cyverse_DEFAULT_REPL_RESC: string
cyverse_DEFAULT_REPL_RESC = '{{ _irods_default_repl_resource }}'

# the name of the resource to use by default
cyverse_DEFAULT_RESC: string
cyverse_DEFAULT_RESC = '{{ _irods_default_resource }}'

# the email address of the iRODS grid
cyverse_EMAIL_FROM_ADDR: string
cyverse_EMAIL_FROM_ADDR = '{{ _irods_service_account_name }}@{{ inventory_hostname }}'

# the email address where any notifications will be sent
cyverse_EMAIL_REPORT_ADDR: string
cyverse_EMAIL_REPORT_ADDR = '{{ _irods_report_email_addr }}'

# the initial number of seconds iRODS waits before attempting to replicate a new
# or modified data object
cyverse_INIT_REPL_DELAY: integer
cyverse_INIT_REPL_DELAY = {{ _irods_init_repl_delay }}

# the maximum number of concurrent rule engine workers
cyverse_MAX_NUM_RE_PROCS: integer
cyverse_MAX_NUM_RE_PROCS = {{ _irods_max_num_re_procs }}

# the rule engine host
cyverse_RE_HOST: string
cyverse_RE_HOST = '{{ _irods_re_host }}'

# the local iRODS zone
cyverse_ZONE: string
cyverse_ZONE = '{{ _irods_zone_name }}'
