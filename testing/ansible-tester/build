#!/usr/bin/env bash
#
# This script builds the ansible-tester image.

set -o errexit -o nounset -o pipefail

EXEC_NAME="$(readlink --canonicalize "$0")"
readonly EXEC_NAME

declare BaseDir


main()
{
  BaseDir="$(dirname "$EXEC_NAME")"

  local cfg="$1"

  if [[ -z "$cfg" ]]; then
    printf 'An environment variable include file is needed.\n' >&2
    return 1
  fi

  if ! [[ "$cfg" =~ ^/ ]]; then
    cfg="$(pwd)"/"$cfg"
  fi

  # shellcheck disable=SC1090
  . "$cfg"

  trap 'rm --force "$BaseDir"/requirements.txt "$BaseDir"/requirements.yml' EXIT
  cp --no-clobber "$BaseDir"/../../requirements-python.txt "$BaseDir"/requirements.txt
  cp --no-clobber "$BaseDir"/../../requirements-ansible.yml "$BaseDir"/requirements.yml

#  docker buildx build --no-cache \
  docker buildx build \
    --build-arg IRODS_CLERVER_PASSWORD="$IRODS_CLERVER_PASSWORD" --tag ansible-tester \
    "$BaseDir"
}


main "$@"
